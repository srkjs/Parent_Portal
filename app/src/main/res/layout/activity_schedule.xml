<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.loginactivity.ScheduleActivity"
    android:orientation="vertical"
    android:id="@+id/container"
    android:background="#ffffff"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="401dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        app:srcCompat="@drawable/logo2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="695dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/regno"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/regno"
            android:hint="Registration Number"
            android:paddingLeft="2dp" />


        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="0"
            android:stretchColumns="1"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="20dp">

            <TableRow android:layout_height="25dp">

                <EditText
                    android:layout_marginLeft="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="0dp"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/std"
                    android:paddingLeft="10dp" />

                <Spinner
                    android:id="@+id/std"
                    android:layout_width="369dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/std"
                    android:entries="@array/standard_arrays_schedule" />

            </TableRow>
        </TableLayout>

        <EditText
            android:id="@+id/schedule"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/portal"
            android:hint="Schedule"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#2196F3"
            android:text="UPDATE Schedule"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textview_back"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Go Back?"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
</LinearLayout>
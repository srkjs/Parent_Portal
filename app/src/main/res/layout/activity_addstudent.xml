<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.loginactivity.AdminActivity"
    android:orientation="vertical"
    android:id="@+id/container"
    android:background="#ffffff"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="401dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="1dp"
        app:srcCompat="@drawable/logo2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="695dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/regno"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/regno"
            android:hint="Registration Number"
            android:inputType="number"
            android:paddingLeft="2dp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/student"
            android:hint="Name of Student"
            android:inputType="textPersonName" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:shrinkColumns="0"
            android:stretchColumns="1"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="20dp">

            <TableRow android:layout_height="25dp">

                <EditText
                    android:layout_marginLeft="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="0dp"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/std"
                    android:paddingLeft="10dp" />

                <Spinner
                    android:id="@+id/std"
                    android:layout_width="284dp"
                    android:layout_height="40dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="20dp"
                    android:background="#ffffff"
                    android:drawableLeft="@drawable/std"
                    android:entries="@array/standard_arrays" />

            </TableRow>
        </TableLayout>


        <EditText
            android:id="@+id/parent"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/student"
            android:hint="Name of Parent"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/dob"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/dob"
            android:hint="DOB - DD/MM/YYYY"
            android:inputType="date" />

        <EditText
            android:id="@+id/blood"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/blood"
            android:hint="Blood Group"
            android:inputType="textCapWords" />

        <EditText
            android:id="@+id/password"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/pass"
            android:hint="Password"
            android:inputType="textShortMessage|textVisiblePassword" />

        <EditText
            android:id="@+id/mob"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/phone"
            android:hint="Mobile Number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/email"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/mail"
            android:hint="E-mail ID"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/address"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/address"
            android:hint="Address"
            android:inputType="textShortMessage" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#2196F3"
            android:text="ADD/Update STUDENT DETAILS"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/textview_back"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="Go Back?"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
</LinearLayout>